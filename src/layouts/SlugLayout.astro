---
import type { CollectionEntry } from 'astro:content';

import Layout from '../layouts/Layout.astro';

import { Icon } from 'astro-icon/components';
import Pill from '../components/Pill.astro';

import { Image } from 'astro:assets'

interface Props {
	entry: CollectionEntry<'projects'|'blog'>,
	image?: string
}

const { entry, image } = Astro.props;
const isBlog = entry.collection === 'blog';
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description} image={image ? image : undefined}>
	<div class="mx-auto md:w-[768px]">
		<a href={entry.collection === 'projects' ? '/projects' : '/blog'} class="flex items-center mb-4 font-header text-accent">
			<Icon name="bx:bx-arrow-back" class="inline-block text-xl mr-2" />	
			Back to {entry.collection === 'projects' ? 'projects' : 'blog'}
		</a>
		<div class=" lg:flex-row gap-4 mb-4 bg-base brutalist-outline w-full md:w-[768px]">
			<header class="p-4">
				{isBlog ? <time class="text-base-content">{
					new Date(entry.data.publishDate).toLocaleDateString('en-US', {
						year: 'numeric',
						month: 'long',
						day: 'numeric'
					})
				}</time> : null}
				<h2 class="font-header text-4xl md:text-5xl lg:text-6xl font-extrabold text-secondary">{entry.data.title}</h2>
				<p class="text-base-content">{entry.data.description}</p>
				<div class="flex gap-4 mt-4">
					{entry.data.tags.map((t) => <Pill>{t}</Pill>)}
				</div>
			</header>
			<div class="p-2 prose mx-auto max-w-none">
				{entry.data.img ?
					<div class="">
						<Image 
							src={entry.data.img}
							alt={entry.data.title ? entry.data.title : ""}
							width=1000
							height=1000
							class="brutalist-outline-accent mx-auto w-full"
							loading="lazy" decoding="async"
						/>
					</div> : null
				}
				<Content />
			</div>
		</div>
	</div>
</Layout>
