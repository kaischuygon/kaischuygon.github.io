---
import { getCollection } from 'astro:content';

import Layout from '../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
	(a:any, b:any) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout
	title="My blog"
	description="I write about my projects, thoughts, and experiences."
>
	<div class="mb-4">
		<div class="gap-2 font-header">
			<h1 class="text-4xl md:text-6xl text-accent font-bold mb-2">My blog</h1>
			<p class="text-lg md:text-2xl text-primary-800 dark:text-primary-200 font-light">I write about my projects, thoughts and experiences.</p>
		</div>
	</div>
    <div class="flex flex-col w-full gap-2">
		{
			posts.map((post) => (
				<a class="brutalist-outline brutalist-outline-hover p-2 flex flex-col gap-2" href={`/blog/${post.slug}`}>
                    <h2 class="text-2xl md:text-3xl font-bold text-accent">
                        {post.data.title}
                    </h2>

                    <p class="text-primary-600 dark:text-primary-400 italic">
                        {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        })}
                    </p>

                    <p class="text-lg md:text-xl text-primary-800 dark:text-primary-200 font-light">
                        {post.data.description}
                    </p>
				</a>
			))
		}
    </div>
</Layout>
