---
import { CollectionEntry, getCollection } from 'astro:content';

import Layout from '../../layouts/Layout.astro';

import Hero from '../../components/Hero.astro';
import Icon from 'astro-icon';
import Pill from '../../components/Pill.astro';

import { Image } from 'astro:assets'

interface Props {
	entry: CollectionEntry<'work'>;
}

// This is a dynamic route that generates a page for every Markdown file in src/content/
// Read more about dynamic routes and this `getStaticPaths` function in the Astro docs:
// https://docs.astro.build/en/core-concepts/routing/#dynamic-routes
export async function getStaticPaths() {
	const work = await getCollection('work');
	return work.map((entry:CollectionEntry<'work'>) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
	<div class="w-full md:w-4/5 mx-auto">
		<div class="">
			<header>
				<a href="/work" class="flex items-center mb-4 font-header">
					<Icon name="bx:bx-arrow-back" class="inline-block w-4 h-4 mr-2" />	
					Back to work
				</a>
				<h2 class="font-header text-4xl md:text-5xl lg:text-6xl font-extrabold text-slate-800 dark:text-slate-200">{entry.data.title}</h2>
				<p class="text-slate-600 dark:text-slate-300">{entry.data.description}</p>
				<div class="flex gap-4 mt-4">
					{entry.data.tags.map((t) => <Pill>{t}</Pill>)}
				</div>
			</header>
			<main class="mt-4">
				{entry.data.img && 
					<div class="shadow-outline dark:shadow-outline-dark mx-auto bg-slate-200 dark:bg-slate-900 p-4 w-full md:w-4/5 lg:w-3/5 xl:w-2/5">
						<img 
							src={entry.data.img} 
							alt={entry.data.title | ""}
							class="w-full h-auto"
							loading="lazy" decoding="async"
						/>
					</div>
				}
				<div class="prose prose-fuchsia max-w-none mt-4">
					<Content />
				</div>
			</main>
		</div>
	</div>
</Layout>

