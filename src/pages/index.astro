---
import Layout from '../layouts/Layout.astro';
import Pill from '../components/Pill.astro'
---

<Layout>
	<div class="flex flex-col justify-center h-full max-w-screen-md mx-auto gap-4 p-4">
		<div class="font-code text-primary-500">👋🏽 Hello! I'm </div>
		<div class="font-code break-all font-semibold text-accent text-4xl md:text-6xl lg:text-7xl xl:text-8xl"><span id="typing">Kai Schuyler Gonzalez</span><span id="cursor">_</span></div>
		<div class="font-code text-primary-500">a software engineer 💻 and designer ✏️ based in Colorado.</div>
	</div>
</Layout>

<script is:inline>
	window.onload = function() {
		var text = 'Kai Schuyler Gonzalez';
		var i = 0;
		let typingSpeed = 100;
		
		function type() {
			var typingDiv = document.getElementById('typing');
			if(i <= text.length) {
				typingDiv.textContent = text.slice(0, i++);
			}
			setTimeout(type, typingSpeed);
		}

		function blinkCursor() {
			var cursor = document.getElementById('cursor');
			cursor.style.display = cursor.style.display === 'none' ? '' : 'none';
			setTimeout(blinkCursor, 500);
		}
	
		type();
		// wait for typing to finish before blinking cursor
		setTimeout(blinkCursor, text.length * typingSpeed);
		// setInterval(blinkCursor, cursorBlinkSpeed);
	}
</script>