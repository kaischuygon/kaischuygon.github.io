---
import { getCollection, type CollectionEntry } from 'astro:content';

import Layout from '../layouts/Layout.astro';

import { Icon } from 'astro-icon/components';
import Pill from '../components/Pill.astro';
import GridItem from '../components/GridItem.astro';
import { Image } from 'astro:assets';
import portrait from '../../public/assets/portrait.png';

const gridItems = await getCollection('grid');

gridItems.sort(function (a:CollectionEntry<'grid'>, b:CollectionEntry<'grid'>) {
  return a.data.sortOrder - b.data.sortOrder;
});
---

<Layout>
	<header class="grid gap-4 grid-cols-1 md:grid-cols-3">
		<div class="col-span-1 md:col-span-2 flex flex-col justify-around font-header gap-4">
			<h1 class="text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-bold block text-accent-400">
				Hello, I'm Kai.
			</h1>
			<p class="text-lg md:text-2xl text-primary-800 dark:text-primary-200 font-light block">
				I develop and design things for the web.
			</p>
			<div class="flex gap-4">
				<Pill><Icon name="bx:bx-code" class="text-xl" />Developer</Pill>
				<Pill><Icon name="bx:bxs-pencil" class="text-xl" />Designer</Pill>
			</div>
		</div>
		<div class="brutalist-outline lg:row-span-2">
			<Image
				src={portrait}
				alt="A profile of Kai"
				class:list={'object-cover h-full mx-auto rounded bg-primary-200 dark:bg-primary-800'}
			/>
		</div>
		{gridItems.map((item) => (
			item.slug == 'about' ? <GridItem item={item} id="about"/> : <GridItem item={item} /> // about is special
		))}
	</header>
</Layout>
