---
import { getCollection } from 'astro:content';

import Layout from '../layouts/Layout.astro';

import CollectionPreview from '../components/CollectionPreview.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a:any, b:any) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout
	title="My Work"
	description="Learn about my most recent projects"
>
	<div class="mb-4">
		<div class="gap-2 font-header">
			<h1 class="text-4xl md:text-6xl text-violet-400 font-bold drop-shadow-outline dark:drop-shadow-outline-dark">My work</h1>
			<p class="text-lg md:text-2xl text-zinc-800 dark:text-zinc-200 font-light">Projects I've working on dating back to my undergrad.</p>
		</div>
	</div>
	<Grid>
		{
			projects.map((project) => (
				<li class="brutalist-outline">
					<CollectionPreview project={project} />
				</li>
			))
		}
	</Grid>
</Layout>
