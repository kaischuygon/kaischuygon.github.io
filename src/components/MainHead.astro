---
import '../styles/global.css';
import { SEO } from "astro-seo";
import config from '../../tailwind.config.mjs';

interface Props {
	title?: string | undefined;
	description?: string | undefined;
	image: string;
	keywords?: string | undefined;
}

const { title, description, image, keywords } = Astro.props;
const accent = config.theme.extend.colors.accent;
---

<SEO
	title={title}
	description={description}
	openGraph={{
		basic: {
			title: `${title} | Kai Schuyler`,
			type: "website",
			image: image,
		},
		optional: {
			locale: "en_US",
			description: description,
			siteName: "kaischuyler.com",
		},
	}}
	twitter={{
		creator: "@kaischuyler"
	}}
	charset='UTF-8'
	canonical="https://kaischuyler.com"
	extend={{
		// extending the default link tags
		link: [
			{ rel: 'icon', type: 'image/svg+xml', href: '/favicon.svg' },
			// for all browsers
			{ rel: 'icon', type: 'image/png', imageSizes: '32x32', href: '/favicon-32x32.png' },
			{ rel: 'icon', type: 'image/png', imageSizes: '16x16', href: '/favicon-16x16.png' },
			// for google and chrome
			{ rel: 'icon', type: 'image/png', imageSizes: '48x48', href: '/favicon-48x48.png' },
			{ rel: 'icon', type: 'image/png', imageSizes: '192x192', href: '/favicon-192x192.png' },
			// for ipad
			{ rel: 'apple-touch-icon', type: 'image/png', imageSizes: '167x167', href: '/favicon-167x167.png' },
			// for iphone
			{ rel: 'apple-touch-icon', type: 'image/png', imageSizes: '180x180', href: '/favicon-180x180.png' },
		],
		// extending the default meta tags
		meta: [
			{ name: "viewport", content: "width=device-width" },
			{ name: "theme-color", content: accent['400'] },
			{ name: "description", content: description },
			{ name: "author", content: "Kai Schuyler Gonzalez" },
			{ name: "keywords", content: keywords },
			{ name: "twitter:title", content: title },
			{ name: "twitter:description", content: description },
		],
	}}
/>