---
import '../styles/global.css';
import { SEO } from "astro-seo";
import config from '../../tailwind.config.mjs';

interface Props {
	title?: string | undefined;
	description?: string | undefined;
	keywords?: string | undefined;
}

const { title, description, keywords } = Astro.props;
const accent = config.theme.extend.colors.accent;
---

<SEO
	title={title}
	titleTemplate="%s | Kai Schuyler Gonzalez"
	titleDefault="Kai Schuyler Gonzalez"
	description={description}
	canonical="https://kaischuyler.com"
	charset='UTF-8'
	openGraph={{
		basic: {
			type: "website",
			title: "I'm Kai, a software engineer and designer.",
			image: "/opengraph-seo.png",
			url: "https://kaischuyler.com",
		}
	}}
	twitter={{
		creator: "@kaischuyler"
	}}
	extend={{
	// extending the default link tags
		link: [
			{ rel: "icon", href: "/favicon.ico" },
			{ rel: "icon", href: "/favicon.svg", type: "image/svg+xml" },
			{ rel: "apple-touch-icon", href: "/apple-touch-icon.png" },
			{ rel: "manifest", href: "/site.webmanifest" },
		],
		// extending the default meta tags
		meta: [
			{ name: "viewport", content: "width=device-width" },
			{ name: "theme-color", content: accent['400'] },
			{ name: "description", content: description },
			{ name: "author", content: "Kai Schuyler Gonzalez" },
			{ name: "keywords", content: keywords },
			{
				name: "twitter:image",
				content: "/opengraph-seo.png",
			},
			{ name: "twitter:title", content: "Kai Schuyler Gonzalez" },
			{ name: "twitter:description", content: "software engineer and designer" },
		],
	}}
/>